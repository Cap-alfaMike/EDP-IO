# ============================================================================
# EDP-IO - Environment Configuration Template
# ============================================================================
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Never commit .env to version control
# 3. In production, use Azure Key Vault instead of environment variables
# ============================================================================

# -----------------------------------------------------------------------------
# Environment Configuration
# -----------------------------------------------------------------------------
ENVIRONMENT=development
# Options: development, staging, production

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_LLM_OBSERVABILITY=false
# Set to 'true' to enable Azure OpenAI integration
# When 'false', the system uses mock responses (safe for demo)

ENABLE_REAL_DATABASE_CONNECTIONS=false
# Set to 'true' only when real database connections are configured
# When 'false', uses mock data generators

ENABLE_AZURE_INTEGRATION=false
# Set to 'true' to enable real Azure service connections
# When 'false', uses local mocks

# -----------------------------------------------------------------------------
# Azure Configuration (Placeholders - DO NOT use real values in .env)
# -----------------------------------------------------------------------------
AZURE_TENANT_ID=00000000-0000-0000-0000-000000000000
AZURE_SUBSCRIPTION_ID=00000000-0000-0000-0000-000000000000
AZURE_RESOURCE_GROUP=rg-edp-io-dev

# Key Vault (Secrets are retrieved from here in production)
AZURE_KEY_VAULT_URL=https://kv-edp-io-dev.vault.azure.net/

# Azure OpenAI (LLM Observability)
AZURE_OPENAI_ENDPOINT=https://edp-io-openai.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# Azure Data Lake Storage Gen2
ADLS_ACCOUNT_NAME=adlsedpiodev
ADLS_CONTAINER_BRONZE=bronze
ADLS_CONTAINER_SILVER=silver
ADLS_CONTAINER_GOLD=gold

# Databricks
DATABRICKS_HOST=https://adb-1234567890123456.7.azuredatabricks.net
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/abcdef1234567890

# -----------------------------------------------------------------------------
# Database Connections (Mock in development)
# -----------------------------------------------------------------------------
# Oracle (Source System - Legacy ERP)
ORACLE_HOST=oracle-legacy.enterprise.local
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=ERPDB
ORACLE_USER=readonly_user
# ORACLE_PASSWORD stored in Key Vault as 'oracle-readonly-password'

# SQL Server (Source System - Legacy CRM)
SQLSERVER_HOST=sqlserver-crm.enterprise.local
SQLSERVER_PORT=1433
SQLSERVER_DATABASE=CRM_PROD
SQLSERVER_USER=readonly_user
# SQLSERVER_PASSWORD stored in Key Vault as 'sqlserver-readonly-password'

# -----------------------------------------------------------------------------
# Local Development Paths
# -----------------------------------------------------------------------------
LOCAL_DATA_PATH=./data
LOCAL_BRONZE_PATH=./data/bronze
LOCAL_SILVER_PATH=./data/silver
LOCAL_GOLD_PATH=./data/gold

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_FORMAT=json
# Options: json, text

# -----------------------------------------------------------------------------
# Streamlit
# -----------------------------------------------------------------------------
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
