# ============================================================================
# EDP-IO - Flake8 Configuration
# ============================================================================

[flake8]
max-line-length = 100
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    dist,
    build,
    dbt_project,
    edp-io-api,
    .pytest_cache,
    .mypy_cache,
    .tox,
    migrations,
    .eggs

per-file-ignores =
    __init__.py:F401

# Configure for async code
max-complexity = 10
